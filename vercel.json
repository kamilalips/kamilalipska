{
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": ".",
  "functions": {
    "api/blog-posts.js": {
      "maxDuration": 10
    },
    "api/sitemap.xml.js": {
      "maxDuration": 10
    },
    "api/llms.txt.js": {
      "maxDuration": 10
    },
    "api/insight.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/insights",
      "destination": "/insights.html"
    },
    {
      "source": "/isights",
      "destination": "/insights.html"
    },
    {
      "source": "/insights/:slug",
      "destination": "/api/insight?slug=:slug"
    },
    {
      "source": "/insights/:slug.html",
      "destination": "/api/insight?slug=:slug"
    },
    {
      "source": "/insights/index.html",
      "destination": "/insights.html"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap.xml.js"
    },
    {
      "source": "/llms.txt",
      "destination": "/api/llms.txt.js"
    },
    {
      "source": "/api/blog-posts",
      "destination": "/api/blog-posts.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
